\usetikzlibrary{shapes.geometric, arrows}%

\newlength{\fd}\setlength{\fd}{3em}%
\tikzstyle{flowchart}=[node distance=\fd]%
\tikzstyle{flowchartnode}=[draw=black,text centered,text width=1.7\fd, minimum height=1.5\baselineskip]%

\tikzstyle{startstop}=[flowchartnode, rectangle, rounded corners, fill=red!30]%
\tikzstyle{io}=[flowchartnode, text width=1.3\fd, trapezium, trapezium left angle=75, trapezium right angle=105, fill=blue!30]%
\tikzstyle{process}=[flowchartnode, rectangle, fill=orange!30]%
\tikzstyle{decision}=[flowchartnode, diamond, fill=green!30, text badly centered, inner sep=0pt]%

\tikzstyle{line}=[very thick]%
\tikzstyle{arrow}=[line,>=stealth]%
\tikzstyle{to}=[arrow, ->]%
\tikzstyle{from}=[arrow, <-]%